extends ../layouts/application.pug

block header
  = t('views.statuses.edit.title')

block content 
  +formFor()(action=`/statuses/${status.id}` method='post')
    +input(status, 'name', errors)(type="text")
    +submit(status)(value=t('views.actions.edit'))
    input(name='_method', type='hidden', value='patch')