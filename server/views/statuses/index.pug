extends ../layouts/application.pug

block header
  = t('layouts.application.statuses')

block content
  a.btn.btn-primary(href=route('newStatus'))= t('views.statuses.actions.createStatus')
  .table-responsive
    table.table.table-borderless.table-striped.mt-5.bg-white
      thead 
        tr
          th= t('views.statuses.id')
          th= t('views.statuses.name')
          th= t('views.statuses.createdAt')
          th= t('views.statuses.head')
      tbody
        each status in statuses
          tr 
            td= status.id
            td= status.name
            td= formatDate(status.createdAt)
