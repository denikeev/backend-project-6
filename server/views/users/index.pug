extends ../layouts/application.pug

block header
  = t('layouts.application.users')

block content
  table.table.table-striped
    thead
      tr
        th= t('views.users.id')
        th= t('views.users.email')
        th= t('views.users.createdAt')
        th= t('views.users.head')
    tbody
      each user in users
        tr
          td= user.id
          td= user.email
          td= formatDate(user.createdAt)
          td.d-flex.flex-wrap
            a.btn.btn-primary.me-1(href=`/users/${user.id}/edit`)= t('views.users.actions.edit')
            form(action=`users/${user.id}` method='post') 
              input(name='_method', type='hidden', value='delete')
              input(class='btn btn-danger', type='submit', value=t('views.users.actions.delete'))
